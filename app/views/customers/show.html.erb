<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Listed Courses</h1>
    <%= link_to 'First page', root_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
    <hr class="mt-6">

  <div id="courses" class="min-w-full">
    <%  current_customer.listed_courses.each do |course| %>
      <%= render "courses/course", course: course %>
    <% end %>
  </div>


  <div class="mt-10 flex justify-between items-center">
    <h1 class="font-bold text-4xl">Liked Courses</h1>
  </div>

  <div id="courses" class="min-w-full">
    <%  current_customer.liked_courses.each do |course| %>
      <%= render "courses/course", course: course %>
    <% end %>
  </div>

  <div class="mt-10 flex justify-between items-center">
    <h1 class="font-bold text-4xl">Created Courses</h1>
  </div>

  <div id="courses" class="min-w-full">
    <%  current_customer.courses.each do |course| %>
      <%= render "courses/course", course: course %>
    <% end %>
  </div>

</div>


