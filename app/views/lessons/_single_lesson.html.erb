<div id="<%= dom_id lesson %>"  class="mt-5 lg:flex lg:items-center lg:justify-between">
  <div class="min-w-0 flex-2">
    <h2 class="text-2xl font-bold leading-6 text-gray-800 sm:truncate sm:text-3xl sm:tracking-tight"><%= lesson.title %></h2>
    <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-6">
      <div class="mt-2 flex items-center text-sm text-gray-500">
        <%= lesson.description %>
      </div>
    </div>
  </div>

  <% if action_name == "show" %>
    <div class="mt-5 flex lg:ml-4 lg:mt-0">
      <span class="hidden sm:block">
        <%= link_to courses_path, type:"button", class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z" />
            </svg>
            Back
          </button>
        <% end %>
      </span>
    </div>
  <% end %>

</div>

<hr class="mt-6">

<%= @lesson.content %>